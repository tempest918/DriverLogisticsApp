<ContentPage
    x:Class="DriverLogisticsApp.Views.ExpenseDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:DriverLogisticsApp.ViewModels"
    Title="Expense Details"
    x:DataType="viewmodels:ExpenseDetailsViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label FontAttributes="Bold" Text="Category" />
            <Label Text="{Binding Expense.FormattedDetails}" />

            <Label
                Margin="0,10,0,0"
                FontAttributes="Bold"
                Text="Amount" />
            <Label Text="{Binding Expense.Amount, StringFormat='{0:C}'}" />

            <Label
                Margin="0,10,0,0"
                FontAttributes="Bold"
                Text="Date" />
            <Label Text="{Binding Expense.Date, StringFormat='{0:D}'}" />

            <Label
                Margin="0,10,0,0"
                FontAttributes="Bold"
                Text="Description" />
            <Label Text="{Binding Expense.Description}" />

            <Label
                Margin="0,10,0,0"
                FontAttributes="Bold"
                IsVisible="{Binding Expense.ReceiptImagePath, Converter={StaticResource StringToBoolConverter}}"
                Text="Receipt Image" />

            <Image
                Margin="0,20"
                HeightRequest="300"
                Source="{Binding Expense.ReceiptImagePath}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnImageTapped" />
                </Image.GestureRecognizers>
            </Image>
            <Grid
                Margin="0,20,0,0"
                ColumnDefinitions="*,*"
                ColumnSpacing="10">
                <Button
                    Grid.Column="0"
                    BackgroundColor="{StaticResource Primary}"
                    Command="{Binding GoToEditExpenseCommand}"
                    Text="Edit Expense" />
                <Button
                    Grid.Column="1"
                    BackgroundColor="Red"
                    Command="{Binding DeleteExpenseCommand}"
                    Text="Delete Expense" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>