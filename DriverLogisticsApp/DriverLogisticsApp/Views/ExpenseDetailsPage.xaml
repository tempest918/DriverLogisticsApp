<ContentPage
    x:Class="DriverLogisticsApp.Views.ExpenseDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:DriverLogisticsApp.ViewModels"
    Title="Expense Details"
    x:DataType="viewmodels:ExpenseDetailsViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label FontAttributes="Bold" Text="Category" />
            <Label Text="{Binding Expense.FormattedDetails}" />

            <Label
                Margin="0,10,0,0"
                FontAttributes="Bold"
                Text="Amount" />
            <Label Text="{Binding Expense.Amount, StringFormat='{0:C}'}" />

            <Label
                Margin="0,10,0,0"
                FontAttributes="Bold"
                Text="Date" />
            <Label Text="{Binding Expense.Date, StringFormat='{0:D}'}" />

            <Label
                Margin="0,10,0,0"
                FontAttributes="Bold"
                Text="Description" />
            <Label Text="{Binding Expense.Description}" />

            <HorizontalStackLayout
                Margin="0,30,0,0"
                HorizontalOptions="Center"
                Spacing="10">
                <Button
                    BackgroundColor="{StaticResource Primary}"
                    Command="{Binding GoToEditExpenseCommand}"
                    Text="Edit Expense" />
                <Button
                    BackgroundColor="Red"
                    Command="{Binding DeleteExpenseCommand}"
                    Text="Delete Expense" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>