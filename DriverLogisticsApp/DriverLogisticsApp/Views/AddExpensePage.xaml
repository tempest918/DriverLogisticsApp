<ContentPage
    x:Class="DriverLogisticsApp.Views.AddExpensePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:DriverLogisticsApp.ViewModels"
    Title="{Binding Title}"
    x:DataType="viewmodels:AddExpenseViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Category" />
            <Picker
                Title="Select a category"
                ItemsSource="{Binding Categories}"
                SelectedItem="{Binding SelectedCategory}" />

            <Label Text="Amount ($)" />
            <Entry
                Keyboard="Numeric"
                Placeholder="0.00"
                Text="{Binding Amount}" />

            <Label Text="Date" />
            <DatePicker Date="{Binding Date}" />

            <Label Text="Description (Optional)" />
            <Editor
                HeightRequest="100"
                Placeholder="e.g., Oil change at..."
                Text="{Binding Description}" />

            <Button
                Margin="0,20,0,0"
                Command="{Binding SaveExpenseCommand}"
                Text="Save Expense" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>