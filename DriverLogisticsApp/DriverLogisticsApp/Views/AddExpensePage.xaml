<ContentPage
    x:Class="DriverLogisticsApp.Views.AddExpensePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:DriverLogisticsApp.ViewModels"
    Title="{Binding Title}"
    x:DataType="viewmodels:AddExpenseViewModel">

    <Grid>
        <ScrollView IsVisible="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}">
            <VerticalStackLayout Padding="20" Spacing="10">
                <Label Text="Category" />
                <Picker
                    x:Name="CategoryPicker"
                    Title="Select a category"
                    ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding SelectedCategory}" />
                <Label
                    FontSize="Small"
                    IsVisible="{Binding Source={x:Reference CategoryPicker}, Path=SelectedItem, Converter={StaticResource IsNullConverter}}"
                    Text="Category is a required field."
                    TextColor="Red" />

                <Label Text="Amount ($)" />
                <Entry
                    Keyboard="Numeric"
                    Placeholder="0.00"
                    Text="{Binding Amount}">

                    <Entry.Behaviors>
                        <toolkit:MultiValidationBehavior Flags="ValidateOnValueChanged">
                            <toolkit:NumericValidationBehavior
                                x:Name="AmountValidator"
                                Flags="ValidateOnValueChanged"
                                MaximumValue="1000000"
                                MinimumValue="0.01" />
                        </toolkit:MultiValidationBehavior>
                    </Entry.Behaviors>
                </Entry>
                <Label
                    FontSize="Small"
                    IsVisible="{Binding Source={x:Reference AmountValidator}, Path=IsNotValid}"
                    Text="Please enter a valid amount greater than 0."
                    TextColor="Red" />

                <Label Text="Date" />
                <DatePicker Date="{Binding Date}" />

                <Label Text="Description (Optional)" />
                <Editor
                    HeightRequest="100"
                    Placeholder="e.g., Oil change at..."
                    Text="{Binding Description}" />

                <Image
                    Margin="0,10"
                    HeightRequest="200"
                    IsVisible="{Binding ReceiptImagePath, Converter={StaticResource StringToBoolConverter}}"
                    Source="{Binding ReceiptImagePath}" />

                <Button Command="{Binding AttachPhotoCommand}" Text="Attach Receipt" />

                <Button
                    Margin="0,20,0,0"
                    Command="{Binding SaveExpenseCommand}"
                    Text="Save Expense" />

            </VerticalStackLayout>
        </ScrollView>

        <ActivityIndicator
            HorizontalOptions="Center"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center"
            Color="{StaticResource Primary}" />
    </Grid>
</ContentPage>