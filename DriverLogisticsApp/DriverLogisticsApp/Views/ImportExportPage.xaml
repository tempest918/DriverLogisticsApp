<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DriverLogisticsApp.Views.ImportExportPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:DriverLogisticsApp.ViewModels"
    Title="Import / Export"
    x:DataType="viewmodels:ImportExportViewModel">
    <Grid>
        <VerticalStackLayout
            Padding="30"
            IsVisible="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
            Spacing="20"
            VerticalOptions="Center">
            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="Data Management" />

            <Label HorizontalTextAlignment="Center" Text="You can export all your data to a JSON file as a backup, or import a previously saved file." />

            <Button
                Margin="0,20,0,0"
                Command="{Binding ImportDataCommand}"
                Text="Import Data from File" />

            <Button Command="{Binding ExportAllDataCommand}" Text="Export All Data to File" />

        </VerticalStackLayout>
        <ActivityIndicator
            HorizontalOptions="Center"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center"
            Color="{StaticResource Primary}" />

    </Grid>
</ContentPage>
