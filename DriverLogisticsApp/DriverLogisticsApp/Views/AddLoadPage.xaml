<ContentPage
    x:Class="DriverLogisticsApp.Views.AddLoadPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:DriverLogisticsApp.ViewModels"
    Title="{Binding Title}"
    x:DataType="viewmodels:AddLoadViewModel">

    <Grid>
        <ScrollView IsVisible="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}">
            <VerticalStackLayout Padding="20" Spacing="10">

                <Label
                    Margin="0,15,0,0"
                    FontAttributes="Bold"
                    FontSize="Large"
                    Text="Load Details" />
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Load Number" />
                            <Span Text=" *" TextColor="Red" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Entry Placeholder="e.g., ABC12345" Text="{Binding LoadNumber}" />
                <Label
                    FontSize="Small"
                    IsVisible="{Binding LoadNumberErrorVisible}"
                    Text="Load Number is a required field."
                    TextColor="Red" />

                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Freight Rate ($)" />
                            <Span Text=" *" TextColor="Red" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Entry
                    Keyboard="Numeric"
                    Placeholder="e.g., 1500"
                    Text="{Binding FreightRate}" />
                <Label
                    FontSize="Small"
                    IsVisible="{Binding FreightRateErrorVisible}"
                    Text="Please enter a valid freight rate greater than 0."
                    TextColor="Red" />

                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Planned Pickup" />
                            <Span Text=" *" TextColor="Red" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                    <DatePicker Grid.Column="0" Date="{Binding PickupDate}" />
                    <TimePicker Grid.Column="1" Time="{Binding PickupTime}" />
                </Grid>
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Planned Delivery" />
                            <Span Text=" *" TextColor="Red" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                    <DatePicker Grid.Column="0" Date="{Binding DeliveryDate}" />
                    <TimePicker Grid.Column="1" Time="{Binding DeliveryTime}" />
                </Grid>

                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Shipper" />
                            <Span Text=" *" TextColor="Red" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                    <Picker
                        Title="Select a Shipper"
                        Grid.Column="0"
                        ItemDisplayBinding="{Binding Name}"
                        ItemsSource="{Binding CompanyList}"
                        SelectedItem="{Binding SelectedShipper}" />
                    <Button
                        Grid.Column="1"
                        Command="{Binding GoToAddCompanyCommand}"
                        Text="New" />
                </Grid>
                <Label
                    FontSize="Small"
                    IsVisible="{Binding ShipperErrorVisible}"
                    Text="Shipper is a required field."
                    TextColor="Red" />

                <Label Text="Consignee" />
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                    <Picker
                        Title="Select a Consignee"
                        Grid.Column="0"
                        ItemDisplayBinding="{Binding Name}"
                        ItemsSource="{Binding CompanyList}"
                        SelectedItem="{Binding SelectedConsignee}" />

                    <Button
                        Grid.Column="1"
                        Command="{Binding GoToAddCompanyCommand}"
                        Text="New" />
                </Grid>

                <Button
                    Margin="0,20,0,0"
                    Command="{Binding SaveLoadCommand}"
                    Text="Save Load" />
            </VerticalStackLayout>
        </ScrollView>

        <ActivityIndicator
            HorizontalOptions="Center"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center"
            Color="{StaticResource Primary}" />
    </Grid>
</ContentPage>
