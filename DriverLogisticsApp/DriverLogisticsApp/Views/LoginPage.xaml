<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DriverLogisticsApp.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login">

    <VerticalStackLayout
        HorizontalOptions="Center"
        Spacing="20"
        VerticalOptions="Center"
        WidthRequest="300">

        <Label
            FontAttributes="Bold"
            FontSize="24"
            HorizontalOptions="Center"
            Text="Enter Your PIN" />

        <Entry
            FontSize="22"
            HorizontalTextAlignment="Center"
            IsPassword="True"
            Keyboard="Numeric"
            MaxLength="4"
            Placeholder="****"
            Text="{Binding Pin}"
            TextChanged="PinEntry_TextChanged" />

    </VerticalStackLayout>
</ContentPage>
