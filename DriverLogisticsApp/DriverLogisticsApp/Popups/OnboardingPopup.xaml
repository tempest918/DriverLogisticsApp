<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="DriverLogisticsApp.Popups.OnboardingPopup"
             Color="Transparent">

    <Grid>
        <BoxView Color="Black" Opacity="0.5" />
        <Frame VerticalOptions="Center" HorizontalOptions="Center" CornerRadius="10" Margin="20">
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label x:Name="TitleLabel" FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                <Label x:Name="DescriptionLabel" HorizontalTextAlignment="Center" />
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                    <Button x:Name="PreviousButton" Text="Previous" Clicked="PreviousButton_Clicked" Grid.Column="0"/>
                    <Button x:Name="NextButton" Text="Next" Clicked="NextButton_Clicked" Grid.Column="1"/>
                    <Button x:Name="DoneButton" Text="Done" Clicked="DoneButton_Clicked" Grid.Column="1" IsVisible="False"/>
                    <Button x:Name="SkipButton" Text="Skip" Clicked="SkipButton_Clicked" Grid.Column="2"/>
                </Grid>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</toolkit:Popup>
