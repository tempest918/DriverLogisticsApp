<ContentPage
    x:Class="DriverLogisticsApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:DriverLogisticsApp.Models"
    xmlns:viewmodels="clr-namespace:DriverLogisticsApp.ViewModels"
    x:Name="mainPage"
    Title="Active Loads"
    x:DataType="viewmodels:MainPageViewModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding GoToAddLoadCommand}" Text="Add" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto, *">

        <SearchBar
            Grid.Row="0"
            Margin="10"
            Placeholder="Search by Load # or Shipper..."
            Text="{Binding SearchText, Mode=TwoWay}" />

        <CollectionView Grid.Row="1" ItemsSource="{Binding Loads}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Load">
                    <Border
                        Margin="10,5"
                        Padding="15"
                        Stroke="LightGray"
                        StrokeShape="RoundRectangle 10">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={x:Reference mainPage}, Path=BindingContext.GoToDetailsCommand}" CommandParameter="{Binding .}" />
                        </Border.GestureRecognizers>

                        <VerticalStackLayout Spacing="5">
                            <Label
                                FontAttributes="Bold"
                                FontSize="Large"
                                Text="{Binding LoadNumber}" />
                            <Label Text="{Binding ShipperName}" />
                            <Label Text="{Binding Status}" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>